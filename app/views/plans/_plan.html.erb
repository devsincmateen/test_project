<tr>

  <td><%= plan.name %></td>
  <td><%= plan.code %></td>
  <td><%= plan.monthly_income %></td>
  <td><%= link_to 'Show', plan_path(plan) %></td>
  <% if current_user.admin? %>    
  <td><%= link_to 'Edit', edit_plan_path(plan) %></td>
  <td><%= link_to 'Destroy', plan_path(plan),
    method: :delete,
    data: { confirm: 'Are you sure?' } %></td>
  <% end %>
</tr>